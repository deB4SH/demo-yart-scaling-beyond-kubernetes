{
    "$id": "https://schema.b4sh.de/generic/kubernetes-volume.json",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Kubernetes Metadata Schema",
    "type": "object",
    "properties": {
        "name": {
            "type": "string",
            "description": "metadata name of ressource to create"
        },
        "mountpath": {
            "type": "string",
            "description": "Path to mount volume to"
        },
        "capacity": {
            "type": "integer",
            "description": "Amount of storage to reserve. Amount is defined in Gi"
        }
    },
    "required": ["name", "mountpath", "capacity"]
}