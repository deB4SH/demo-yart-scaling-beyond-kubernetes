{% if cluster.azureBackend is defined %}
terraform {
  backend "azurerm" {
    resource_group_name  = "{{ cluster.azureBackend.ressourceGroupName }}"
    storage_account_name = "{{ cluster.azureBackend.storageAccountName }}"
    container_name       = "tfstate"
    key                  = "{{ cluster.defaults.stage }}" # refers to the file name
  }
}
{% endif %}

terraform {
  required_version = ">= 1.3.0"

  required_providers {

    azurerm = {
      source  = "hashicorp/azurerm"
      version = "< 4.0.0"
    }

    azuread = {
      source  = "hashicorp/azuread"
      version = ">= 2.39.0"
    }
  }
}
